{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Album Data",
  "type": "object",
  "properties": {
    "version": { "type": "string", "description": "Semantic version for album data." },
    "name": { "type": "string", "description": "Readable name of the album." },
    "artists": {
      "type": "array",
      "description": "Readable name of the artist(s) of the album.",
      "items": { "type": "string" }
    },
    "albumArtAsset": { "type": "string", "description": "Asset key for the album art image." },
    "albumTitleAsset": { "type": "string", "description": "Asset key for the album title image or spritesheet." },
    "albumTitleOffsets": { "$ref": "common.json#/$defs/offset2D" },
    "albumTitleAnimations": {
      "type": "array",
      "description": "Optional array of animations for the album title.",
      "items": { "$ref": "common.json#/$defs/animation" }
    }
  },
  "required": ["name", "artists", "albumArtAsset", "albumTitleAsset"]
}