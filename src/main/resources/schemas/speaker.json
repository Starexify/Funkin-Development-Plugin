{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Speaker Data",
  "type": "object",
  "properties": {
    "version": { "type": "string", "description": "Semantic version for speaker data." },
    "name": { "type": "string", "default": "Unknown",  "description": "Readable name of the speaker." },
    "assetPath": { "type": "string", "description": "The path to the asset to use for the speaker's sprite." },
    "flipX": { "type": "boolean", "default": false },
    "flipY": { "type": "boolean", "default": false },
    "isPixel": { "type": "boolean", "default": false },
    "scale": { "type": "number", "default": 1.0 },
    "offsets": { "$ref": "common.json#/$defs/offset2D" },
    "animations": {
      "type": "array",
      "description": "The available animations for the speaker.",
      "items": { "$ref": "common.json#/$defs/animation" }
    }
  },
  "required": ["name", "assetPath"]
}