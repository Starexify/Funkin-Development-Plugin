{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Song Music Data",
  "description": "Metadata for music tracks (like menus) that require timing but no gameplay data.",
  "type": "object",
  "properties": {
    "version": { "type": "string", "description": "Semantic version for music data." },
    "songName": { "type": "string", "default": "Unknown" },
    "artist": { "type": "string", "default": "Unknown" },
    "divisions": { "type": ["integer", "null"], "default": 96 },
    "looped": { "type": ["boolean", "null"], "default": false },
    "timeFormat": { "type": "string", "enum": ["ms", "ticks", "float"], "default": "ms" },
    "timeChanges": {
      "type": "array",
      "items": { "$ref": "common.json#/$defs/timeChange" }
    },
    "generatedBy": { "type": "string" }
  },
  "required": ["version", "songName", "artist", "timeFormat", "timeChanges"]
}