{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Story Level Data",
  "type": "object",
  "properties": {
    "version": { "type": "string", "description": "Semantic version for level data." },
    "name": { "type": "string", "description": "The title of the level, as seen in the top corner." },
    "titleAsset": { "type": "string", "description": "The graphic for the level name in the scrolling list." },
    "visible": { "type": "boolean", "default": true, "description": "Whether this week is visible in the story menu." },
    "background": { "type": "string", "format": "color", "default": "#F9CF51", "description": "The background hex color for the level." },
    "songs": {
      "type": "array",
      "items": { "type": "string" },
      "default": ["bopeebo"],
      "description": "List of song IDs included in this level."
    },
    "props": {
      "type": "array",
      "description": "Characters or objects to display on the story menu.",
      "items": {
        "type": "object",
        "properties": {
          "assetPath": { "type": "string" },
          "scale": { "type": "number", "default": 1.0 },
          "alpha": { "type": "number", "default": 1.0, "minimum": 0, "maximum": 1 },
          "isPixel": { "type": "boolean", "default": false },
          "danceEvery": { "type": "number", "default": 1.0 },
          "offsets": { "$ref": "common.json#/$defs/offset2D" },
          "animations": {
            "type": "array",
            "items": { "$ref": "common.json#/$defs/animation" }
          }
        },
        "required": ["assetPath"]
      }
    }
  },
  "required": ["name", "titleAsset", "songs"]
}