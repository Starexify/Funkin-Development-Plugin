<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.nova.FunkinDevPlugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Funkin Development</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="">YourCompany</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Enter short description for your plugin here.<br>
        <em>most HTML tags may be used</em>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.plugins.haxe</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType implementationClass="com.nova.funkindevplugin.VSliceFileType"
                  name="Haxe Script File"
                  extensions="hxc"
                  language="Haxe"/>
        <newProjectWizard.languageGenerator implementation="com.nova.funkindevplugin.projects.VSliceNewProjectWizard"/>
        <internalFileTemplate name="Module.hxc"/>
        <internalFileTemplate name="Empty.hxc"/>
        <internalFileTemplate name="Song.hxc"/>
        <internalFileTemplate name="Stage.hxc"/>
        <internalFileTemplate name="Level.hxc"/>
        <internalFileTemplate name="SongEvent.hxc"/>
        <internalFileTemplate name="NoteKind.hxc"/>
        <internalFileTemplate name="FunkinSprite.hxc"/>
        <internalFileTemplate name="Character.hxc"/>
        <internalFileTemplate name="FreeplayDJ.hxc"/>
    </extensions>

    <extensionPoints>
        <extensionPoint name="vslice.buildSystem"
                        interface="com.nova.funkindevplugin.projects.BuildSystemVSliceNewProjectWizard"
                        dynamic="true"/>
    </extensionPoints>

    <actions>
        <action id="VSlice.NewFunkinScript" class="com.nova.funkindevplugin.actions.NewVSliceFileAction"
                icon="HaxeIcons.Class">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>