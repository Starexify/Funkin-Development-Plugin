<idea-plugin>
    <id>com.nova.FunkinDevPlugin</id>
    <name>Funkin Development</name>
    <vendor>ImVeryBad</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.plugins.haxe</depends>
    <depends>com.intellij.modules.json</depends>
    <depends>com.jetbrains.sh</depends>

    <extensions defaultExtensionNs="JavaScript">
        <JsonSchema.ProviderFactory implementation="com.nova.funkindevplugin.schemas.VSliceJsonSchemaProviderFactory"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <fileType implementationClass="com.nova.funkindevplugin.VSliceFileType"
                  name="Haxe Script File"
                  extensions="hxc"
                  language="Haxe"/>
        <newProjectWizard.languageGenerator implementation="com.nova.funkindevplugin.projectWizard.VSliceNewProjectWizard"/>
        <internalFileTemplate name="Module.hxc"/>
        <internalFileTemplate name="Empty.hxc"/>
        <internalFileTemplate name="Song.hxc"/>
        <internalFileTemplate name="Stage.hxc"/>
        <internalFileTemplate name="Level.hxc"/>
        <internalFileTemplate name="SongEvent.hxc"/>
        <internalFileTemplate name="NoteKind.hxc"/>
        <internalFileTemplate name="FunkinSprite.hxc"/>
        <internalFileTemplate name="Character.hxc"/>
        <internalFileTemplate name="FreeplayDJ.hxc"/>
    </extensions>

    <actions>
        <action id="VSlice.NewFunkinScript" class="com.nova.funkindevplugin.actions.NewVSliceFileAction"
                icon="HaxeIcons.Class">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>